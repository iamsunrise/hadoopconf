<!-- Put site-specific property overrides in this file. -->

<configuration>
<!--副本数-->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
    </property>
<!--块大小-->
    <property>
        <name>dfs.block.size</name>
        <value>134217728</value>
    </property>
<!--元数据存放目录-->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/mydata/hadoop/dfs/name</value>
    </property>
<!--数据存放目录-->
    <property>
        <name>dfs.namenode.data.dir</name>
        <value>/mydata/hadoop/dfs/data</value>
    </property>
<!--hdfs检测目录-->
    <property>
        <name>fs.checkpoint.dir</name>
        <value>/mydata/hadoop/dfs/checkpoint</value>
    </property>
<!--hdfs的namenode的web ui地址-->
    <property>
        <name>dfs.http.address</name>
        <value>10.11.10.211:50070</value>
    </property>
<!--hdfs的snn的web ui地址-->
    <property>
        <name>dfs.secondary.http.address</name>
        <value>10.11.10.211:50090</value>
    </property>
<!--是否通过web操作hdfs-->
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
    </property>
<!--是否启用hdfs的权限（acl）-->
    <property>
        <name>dfs.permissions</name>
        <value>false</value>
    </property>
</configuration>
